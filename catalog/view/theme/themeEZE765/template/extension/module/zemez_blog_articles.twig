{% if simple_blog_found is defined %}
	{% if articles %}
		<div class="box blog_articles">
			<div class="box-heading">
				<h3 class="product-section-title">{{ heading_blog_title }}</h3>
			</div>
			<div class="box-content">
				<div class="row " {% if layout_type %} data-box-carousel data-carousel-settings="items: 3, space: 20" data-nav-id="blog-articles-{{ module }}"{% endif %}>
					{% for article in articles %}
						<div class="col-6 col-md-4">
							<div class="article-thumbnail">
								{% if (show_image == 1) %}
									<figure class="article-image">
										<a href="{{ article['href'] }}">
											<img width="{{ article['image_width'] }}" height="{{ article['image_height'] }}" src="{{ article['image'] }}" alt="{{ article['article_title'] }}"/>
										</a>
									</figure>
								{% endif %}
								<div class="tx-block">
									{% if (show_author == 1 or show_comments == 1 or show_date == 1) %}
										<div class="article-sub-title">

											{% if (article['allow_comment'] and show_comments == 1) %}
												<p class="article-comments"><a href="{{ article['comment_href'] }}"><i class="linearicons-bubble"></i><span>{{ article['total_comment'] }}</span></a></p>
											{% endif %}

											{% if (show_author == 1) %}
												<p class="article-author"><a href="{{ article['author_href'] }}"><i class="linearicons-user"></i><span>{{ article['author_name'] }}</span></a></p>
											{% endif %}

											{% if (show_date == 1) %}
												<p class="article-date"><i class="linearicons-calendar-check"></i><span>{{ article['date_added'] }}</span></p>
											{% endif %}
										</div>
									{% endif %}
									<div class="article-title"><a href="{{ article['href'] }}">{{ article['article_title'] }}</a></div>
									
									{% if (show_description and article['description']) %}
										<div class="article-description">{{ article['description'] }}</div>
									{% endif %}
									{% if (show_readmore == 1) %}
										<a href="{{ article['href'] }}" class="btn btn-primary">{{ text_button_continue }}</a>
									{% endif %}
								</div>
							</div>
						</div>
					{% endfor %}
				</div>
				
				<div class="view-all">
					{% if layout_type %}
						<a class="btn btn-primary btn-lg" href="index.php?route=simple_blog/article">{{ text_all_blog }}</a>
					{% endif %}
				</div>
			
			</div>
		</div>
	{% else %}
		<div class="buttons">
			<div class="center">{{ text_no_found }}</div>
		</div>
	{% endif %}
{% endif %}